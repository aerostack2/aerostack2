<package format="3">
  <name>as2_realsense_interface</name>
  <version>1.0.6</version>
  <description>Intel Realsense cameras driver</description>

  <maintainer email="cvar.upm3@gmail.com">CVAR-UPM</maintainer>
  
  <license>BSD-3-Clause</license>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <depend>rclcpp</depend>
  <depend>as2_core</depend>
  <depend>as2_msgs</depend>
  <depend>std_msgs</depend>
  <depend>sensor_msgs</depend>
  <depend>nav_msgs</depend>
  <depend>geometry_msgs</depend>
  <depend>std_srvs </depend>
  <depend>librealsense2</depend>
  <depend>tf2</depend>
  <depend>tf2_ros</depend>

  <test_depend>ament_cmake_clang_format</test_depend>
