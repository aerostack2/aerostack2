{% if sensor.model == 'gimbal_speed' or sensor.model == 'gimbal_position' -%}

    <model name='{{ sensor.sensor_attached }}'>

{% else -%}

    <model name='{{ sensor.name }}'>
    <pose
        relative_to="base_link">
        {{ sensor.pose }}
    </pose>

{% endif -%}

    <link name="hd_camera">
        <inertial>
            <mass>0.005</mass>
            <inertia>
                <ixx>8.33e-06</ixx>
                <ixy>0</ixy>
                <ixz>0</ixz>
                <iyy>8.33e-06</iyy>
                <iyz>0</iyz>
                <izz>8.33e-06</izz>
            </inertia>
        </inertial>
        <sensor name="hd_camera" type="camera">
            <always_on>1</always_on>
            <update_rate>20</update_rate>
            <camera name="hd_camera">
                <horizontal_fov>1.0472</horizontal_fov>
                <lens>
                    <intrinsics>
                        <!-- fx = fy = width / ( 2 * tan (hfov / 2 ) ) -->
                        <fx>1108.5</fx>
                        <fy>1108.5</fy>
                        <!-- cx = ( width + 1 ) / 2 -->
                        <cx>640.5</cx>
                        <!-- cy = ( height + 1 ) / 2 -->
                        <cy>480.5</cy>
                        <s>0</s>
                    </intrinsics>
                </lens>
                <image>
                    <width>1280</width>
                    <height>960</height>
                    <format>R8G8B8</format>
                </image>
                <clip>
                    <near>0.01</near>
                    <far>300</far>
                </clip>
                <noise>
                    <type>gaussian</type>
                    <mean>0</mean>
                    <stddev>0.007</stddev>
                </noise>

                {% if sensor.model == 'gimbal_speed' or sensor.model == 'gimbal_position' -%}

                    <optical_frame_id>/{{ namespace }}/{{ sensor.name }}/_0/_1/_2/{{ sensor.sensor_attached }}/{{ sensor.sensor_attached_type }}/optical_frame</optical_frame_id>

                {% else -%}

                    <optical_frame_id>/{{ namespace }}/{{ sensor.name }}/{{ sensor.model }}/optical_frame</optical_frame_id>

                {% endif -%}
                
                </camera>
            </sensor>
        </link>
+
    <frame name="mount_point"/>
</model>

{% if sensor.model != 'gimbal_speed' and sensor.model != 'gimbal_position' -%}

<joint
    name="{{ sensor.name }}_joint" type="fixed">
    <parent>base_link</parent>
    <child>{{ sensor.name }}</child>
</joint>

{% endif -%}
