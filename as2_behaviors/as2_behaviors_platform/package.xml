<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>as2_behaviors_platform</name>
  <version>1.1.2</version>
  <description>Aerostack2 core package which contains launchers for the basic behaviors</description>

  <maintainer email="cvar.upm3@gmail.com">CVAR-UPM</maintainer>
  
  <license>BSD-3-Clause</license>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <depend>rclcpp</depend>
  <depend>rclcpp_action</depend>
  <depend>as2_core</depend>
  <depend>as2_behavior</depend>
  <depend>as2_msgs</depend>

  <!-- linting test dependencies -->
  <test_depend>ament_lint_common</test_depend>
  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_cmake_gtest</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
